{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@money-onboarding/core": ["./packages/core/src"],
      "@money-onboarding/core/*": ["./packages/core/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "services/*/src/**/*",
    "tests/**/*",
    "db/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
